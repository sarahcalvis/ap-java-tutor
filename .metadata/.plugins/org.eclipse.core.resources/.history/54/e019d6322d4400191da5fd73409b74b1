import java.util.ArrayList;

public class Question {
	int qID;
	String text;
	ArrayList<String> answers;		//first answer is right, it will be displayed randomly
	boolean asked;
	String topic;
	String bloom;
	
	void Question(int qID, String text, ArrayList<String> answers, String topic, String bloom){
		this.qID = qID;
		this.text = text;
		for(String a : answers){
			this.answers.add(a);
		}
		asked = false;
		this.topic = topic;
		this.bloom = bloom;
	}
	
	void setID(int id){
		this.qID = id;
	}
	
	int getID(){
		return qID;
	}
	
	String getAnswer(int ans){
		return answers.get(ans);
	}
	
	void setAsked(boolean asked){
		this.asked = asked;
	}
	
	boolean getAsked(){
		return asked;
	}
	
	String getTopic(){
		return topic;
	}
	
	String getBloom(){
		return bloom;
	}
	
	String getText(){
		return text;
	}
}
